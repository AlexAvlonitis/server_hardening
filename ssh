function check_ssh {
  echo "############ SSH #############"
  if pgrep -x sshd >/dev/null
  then
    echo "SSH server is running ..."
    return echo -e "${YELLOW}[WARNING] ssh config does not exist" && sshd_config_exists
    check_permit_root_login
  else
    echo -e "${GREEN}[SUCCESS] SSH server is not running"
  fi
  reset_colors
  echo -e "############ SSH #############\n"
}

function sshd_config_exists {
  [ -f /etc/ssh/sshd_config ]
}

function check_permit_root_login {
  echo 'Checking if root login is enabled...'
  if grep -i 'PermitRootLogin yes' /etc/ssh/sshd_config
  then
    echo -e "${RED}[ERROR] Root Login is enabled \n"
    echo -e "Instructions on how to disable it: "
  else
    echo -e "${GREEN}[SUCCESS] Root Login is disabled"
  fi
}
